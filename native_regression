from matrix import *
import matplotlib.pyplot as plt

matrix=loadtxt("prog\lab2\chirps.txt")
X=[]
Y=[]
for i in range(len(matrix)):
    X.append(matrix[i][0])
    Y.append(matrix[i][1])

Xp  = powers(X,0,1)
Yp  = powers(Y,1,1)
Xpt = transpose(Xp)

[[b],[m]] = matmul(invert(matmul(Xpt,Xp)),matmul(Xpt,Yp))

Y2=[]

for j in range(len(Y)):
    Y2.append(b + m * X[j])
    
plt.plot(X,Y,'ro')
plt.plot(X,Y2)
plt.show()

